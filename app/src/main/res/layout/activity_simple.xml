<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_simple"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_outer"
    tools:context="com.example.android.downloader.simple.activity.SimpleActivity">

    <Button
        android:id="@+id/bt_download_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#278B8B"
        android:text="descargar"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_download_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#278B8B"
        android:textColor="@color/white" />
</LinearLayout>
